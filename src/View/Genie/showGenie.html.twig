{% extends 'parent.html.twig' %}

{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/showGenieStyle.css">
{% endblock %}

{% block title %}Génie -
	{{genieInfo.genieName}}
{% endblock %}

{% block header %}{% endblock %}

{% block content %}

	<div class="container">
		<div class="row justify-content-center">
			<div class="col-12 col-xs-12 col-sm-5 col-md-5 col-lg-5">
				<img src={{genieInfo.genie_img}} class="rounded" alt="Image du génie {{genieInfo.genieName}}">
				<h1>{{genieInfo.genieName}}</h1>
			</div>
			<div class="col-5 col-xs-5 col-sm-2 imagetile">
				<img src={{genieInfo.lamp_img}} class="tileimg" alt="Image de la lampe de {{genieInfo.genieName}}">
				<img src={{genieInfo.img}} class="tileimg" alt="Image de la lampe de {{genieInfo.genieName}}">
			</div>
			<div class="col-5 col-xs-5 col-sm-2 imagetile">
				<div class="tile">
					<h2>{{genieInfo.nb_wishes}}</h2>
					<p>voeux</p>
				</div>
				<div class="tile">
					<h2>{{genieInfo.costPerDay}}€</h2>
					<p>/jour</p>
				</div>
			</div>
			<div class="row justify-content-center">
				<div class="col-12 col-xs-12 col-sm-5 col-md-5 col-lg-5">
					<p>{{genieInfo.description}}</p>
				</div>
				<div class="col-5 col-xs-5 col-sm-2">
				</div>
				<div class="col-5 col-xs-5 col-sm-2">
				</div>
			</div>
		</div>
	</div>
{% endblock %}
{% block footer %}{% endblock %}
